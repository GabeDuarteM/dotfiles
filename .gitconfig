[core]
  editor = nvim
  excludesfile = ~/.config/.gitignore
[alias]
  ignore = "!gi() { touch .gitignore; echo \"$(curl -sL https://www.gitignore.io/api/$@)\" >> .gitignore; echo \"Added $1 to .gitignore\" ;}; gi"

[merge]
  conflictStyle = diff3
[includeIf "gitdir:~/work/"]
  path = ~/work/.gitconfig

[push]
  autoSetupRemote = true
[init]
	defaultBranch = main
[pull]
	rebase = true
